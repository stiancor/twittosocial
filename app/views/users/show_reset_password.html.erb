<% provide(:title, 'Edit user') %>
<h1>Change password</h1>

<div class="row">
  <div class="span6 offset3">
    <h3>Hi there <%= @user.name unless @user.nil? %></h3>
    <br/>
    <%= form_for(:user, url: reset_password_path) do |f| %>
        <%= render 'shared/error_messages', object: @user %>
        <%= hidden_field_tag :forgotten_password_key, @user.forgotten_password_key %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, 'Confirm Password' %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit 'Save password', class: 'btn btn-large btn-primary' %>
    <% end %>

  </div>
</div>
