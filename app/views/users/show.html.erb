<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if !@user.username.nil? %><span class="username">@<%=@user.username %></span><% end %>
      <% if @user_rank[@user.id] %> <div class="app-icon <%= rank_color_class(@user_rank[@user.id]) %>" title="Rank based on activity the latest month"></div><% end %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'users/follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
        <h3>Microposts <%= @user.microposts.count %></h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
