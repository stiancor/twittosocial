<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="row">
  <div class="span4">
    <%= form_tag users_path, method: :get do %>
        <p>
          <%= text_field_tag :query, params[:query], placeholder: 'Search for user...' %>
          <%= submit_tag 'Search', name: nil, class: 'btn btn-large btn-primary' %>
        </p>
    <% end %>
  </div>
</div>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>
