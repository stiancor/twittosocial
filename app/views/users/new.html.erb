<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @user do |f| %>
        <%= render 'shared/multiple_form_error_messages', object: @domain_objects %>
        <%= fields_for @codeword do |c| %>
            <%= c.label :codeword, "Secret code word" %>
            <%= c.text_field :codeword %>
        <% end %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
