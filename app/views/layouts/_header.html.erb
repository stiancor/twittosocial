<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to 'twittosocial', root_path, id: 'logo' %>

      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="nav-collapse">
        <ul class="nav pull-right">
          <% if signed_in? %>
              <li><%= render partial: 'layouts/event_header' %> </li>
              <li><%= link_to 'Help', help_path %></li>
              <li><%= link_to 'Users', users_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Profile', user_path(current_user) %></li>
                  <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to 'Sign out', signout_path, method: 'delete' %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to 'Sign in', signin_path %></li>
          <% end %>
        </ul>
        <% if signed_in? %>
            <%= form_tag root_path, method: :get, class: 'pull-right global-search' do %>
                <p>
                  <%= text_field_tag :q, params[:q], placeholder: 'Search', id: 'nav-search-field' %>
                </p>
            <% end %>
        <% end %>
      </div>

    </div>
  </div>
</header>