<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/microposts_form' %>
        </section>
        <section class="small-screen-hidden">
          <%= render 'static_pages/usernames' %>
        </section>
      </aside>
      <div class="span8">
        <h3>Micropost feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Welcome to the revolution!</h1>

      <blockquote>
        <p>"This must be the best twitter clone out there!" - Stian Alsos</p>
      </blockquote>

      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-large btn-primary' %>

      <br/>
      <br/>Already have a profile? <%= link_to 'Sign in here!', signin_path  %>
    </div>

<% end %>