<div class="row">
  <div class="span6 offset3">
    <%= form_for @event do |f| %>
        <%= render 'shared/error_messages', object: @event %>
        <%= f.label :name, 'Title' %>
        <%= f.text_field :title, size: 250 %>

        <%= f.label :location %>
        <%= f.text_field :location, size: 250 %>

        <%= f.label :start_time %>
        <div class="input-append date form_datetime">
          <%= f.text_field :start_time, readonly: true, size: 16, class: 'event_date_time',
                           value: (@event.start_time.blank? ? '' : @event.start_time.strftime('%d %B %Y - %H:%M')) %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>

        <%= f.label :end_time %>
        <div class="input-append date form_datetime">
          <%= f.text_field :end_time, readonly: true, size: 16, class: 'event_date_time',
                           value: (@event.end_time.blank? ? '' : @event.end_time.strftime('%d %B %Y - %H:%M')) %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>

        <div class="space-bottom">
          <%= f.check_box(:send_mail, checked: true) %>
          <%= f.label(:send_mail, 'Send email', class: 'label-inline') %> &nbsp;
        </div>
        <div class="space-bottom">

          <%= f.radio_button :invite_all, true, class: 'invite_all_true' %>
          <%= f.label :invite_all, 'Invite everyone', value: 'true', class: 'label-inline' %>
          <%= f.radio_button :invite_all, false, class: 'invite_all_false' %>
          <%= f.label :invite_all, 'Pick someone', value: 'false', class: 'label-inline' %>

          <div id="people-to-invite">
            <b>Pick people to invite</b>


            <%= hidden_field_tag 'event[user_ids][]', nil %>
            <% @users.each do |user| %>
                <br/>
                <%= check_box_tag 'event[user_ids][]', user.id, @event.user_ids.include?(user.id), id: dom_id(user) %>
                <%= label_tag dom_id(user), user.name, class: 'label-inline' %>
            <% end %>

          </div>

          <%= f.text_area :invitation, placeholder: 'Write invitation here...' %>

          <%= f.submit 'Save', class: 'btn btn-large btn-primary' %>
    <% end %>
    </div>
  </div>
</div>