<% provide(:title, 'Create event!') %>

<h1>Create new event!</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @event do |f| %>
        <%= render 'shared/error_messages', object: @event %>
        <%= f.label :name, "Title" %>
        <%= f.text_field :title %>

        <%= f.label :location %>
        <%= f.text_field :location %>

        <%= f.label :start_time %>
        <%= f.datetime_select :start_time %>

        <%= f.label :end_time %>
        <%= f.datetime_select :end_time %>

        <%= f.label :invitation, "Invitation" %>
        <%= f.text_area :invitation %>

        <%= f.submit "Create event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>