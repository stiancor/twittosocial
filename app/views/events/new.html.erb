<% provide(:title, 'Create event!') %>

<h1>Create new event!</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @event do |f| %>
        <%= render 'shared/error_messages', object: @event %>
        <%= f.label :name, 'Title' %>
        <%= f.text_field :title, size: 250 %>

        <%= f.label :location %>
        <%= f.text_field :location, size: 250 %>
        <%= f.label :start_time %>

        <div class="input-append date form_datetime">
          <%= f.text_field :start_time, readonly: true, size: 16 %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>

        <%= f.label :end_time %>

        <div class="input-append date form_datetime">
          <%= f.text_field :end_time, readonly: true, size: 16 %>
          <span class="add-on"><i class="icon-th"></i></span>
        </div>

        <%= f.label :invitation, 'Invitation' %>
        <%= f.text_area :invitation %>

        <%= f.submit 'Create event', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>